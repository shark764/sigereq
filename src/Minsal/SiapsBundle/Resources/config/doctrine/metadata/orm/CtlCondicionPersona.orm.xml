<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CtlCondicionPersona" table="ctl_condicion_persona">
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="ctl_condicion_persona_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="nombre" type="string" column="nombre" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="comment">Nombre de la Condicion de la Persona</option>
      </options>
    </field>
    <field name="descripcion" type="text" column="descripcion" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Descripcion de la Condicion de la Persona</option>
      </options>
    </field>
    <field name="abreviatura" type="string" column="abreviatura" length="5" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">abreviatura para identificar a la persona</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
