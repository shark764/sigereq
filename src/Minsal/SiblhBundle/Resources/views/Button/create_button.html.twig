{% if admin.hasRoute('create') and admin.isGranted('CREATE')%}
    {% if admin.subClasses is empty %}
        <div class="btn-group" role="group" aria-label="...">
            <a class="btn btn-sm btn-primary btn-bigger-glyphicon-icon" href="{{ admin.generateUrl('create') }}">
                <span class=" glyphicon glyphicon-plus-sign"></span>&nbsp; Nuevo</a>
        </div>
    {% else %}
        <li class="divider" role="presentation"></li>
        {% for subclass in admin.subclasses|keys %}
            <li>
                <a href="{{ admin.generateUrl('create', {'subclass': subclass}) }}">
                    <i class="fa fa-plus-circle"></i>
                    Crear nuevo {{ subclass|trans({}, admin.translationdomain) }}
                </a>
            </li>
        {% endfor %}
        <li class="divider" role="presentation"></li>
    {% endif %}
{% endif %}