{% if choices is defined and choices|length < 15 %}
    <div class="alert alert-warning alert-dismissible help-alert-radiology-result-status no-diagnosis-request" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only"> Cerrar </span></button>
        <span>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp; <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>&nbsp; Si no pueden agregarse frascos, consulte frascos condicionados en el menú <a class="btn-link btn-link-primary-v4" href="{{ path('siblh_frasco_procesado_create') }}">Consultar frascos procesados</a>
        </span>
    </div>
{% endif %}

<div class="panel panel-default">
    <div class="panel-body">
        <center>
            <div class="btn-toolbar" role="toolbar" aria-label="..." style="display: table;">
                <div class="btn-group" role="group" aria-label="...">
                    <a class="btn btn-sm btn-xray-awesome-blue btn-bigger-glyphicon-icon" href="javascript:void(0)" onclick="generateAutomaticBatchOfBottles(this); return false;" name="BATCH_{{ sonata_admin.admin.uniqId }}_generate_automatic_batch_of_bottles" id="BATCH_{{ sonata_admin.admin.uniqId }}_generate_automatic_batch_of_bottles" {#disabled="disabled"#}><span class="glyphicon glyphicon-list-alt"></span> Lote automático</a>
                </div>
                <div class="btn-group" role="group" aria-label="...">
                    <a class="btn btn-sm btn-success-v3 btn-bigger-glyphicon-icon" href="{{ path('siblh_frasco_procesado_create') }}"><span class="glyphicon glyphicon-pushpin"></span> Combinar frascos</a>
                </div>
                <div class="btn-group" role="group" aria-label="...">
                    <a class="btn btn-sm btn-success-v3 btn-bigger-glyphicon-icon" href="{{ path('siblh_crematocrito_create') }}"><span class="glyphicon glyphicon-pushpin"></span> Crematocrito</a>
                </div>
            </div>
        </center>
    </div>
</div>

<table data-toggle="table"{# #} class="table table-condensed table-hover table-xray-supreme-head blh-bsfixedtable" id="blh_processed_bottle_target_bstable" name="blh_processed_bottle_target_bstable"
        data-id-field="id"
        data-cache="false"
        data-show-columns="true"
        data-search="true"
        data-pagination="true"
        data-pagination-h-align="left"
        data-pagination-detail-h-align="right"
        data-page-list="[15, 25, 30]"
        data-page-size="15" {#{{ curva.numeroFrascos }}#}
        data-classes="table table-condensed table-hover table-xray-supreme-head blh-bsfixedtable"
        data-buttons-class="xray-awesome-blue"
        data-search-align="left"
        data-buttons-align="left"
        data-toolbar-align="right">
    <thead>
        <tr>
            <th data-align="center" data-halign="center" data-valign="middle"><input type="checkbox" id="BATCH_{{ sonata_admin.admin.uniqId }}_pasteurizacionFrascoProcesado_all" name="BATCH_{{ sonata_admin.admin.uniqId }}[pasteurizacionFrascoProcesado][all]"></th>
            <th class="bstable-column-highlighted">Cód. (fco.)</th>
            <th class="bstable-column-highlighted">Vol. (ml)</th>
            <th>Vol. (oz)</th>
            <th>Acidez</th>
            <th>Kcalorías</th>
            <th class="bstable-column-highlighted">Vol. Disponible (ml)</th>
            <th>Combinación</th>
            <th>Fecha Reg.</th>
        </tr>
    </thead>
    <tbody>
