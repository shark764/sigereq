    {# bootstrap-modal #}

    {# bootstrap sweetalert #}
    <script type="text/javascript" src="{{ asset('bundles/minsalsiblh/plugin/bootstrap-sweetalert-master/dist/sweetalert.min.js') }}" ></script>

    <script type="text/javascript">
        //////////////////////////////////////////////////////////////////////////////////////////////
        var donorFormatResult = function(el) {
            var markup = '<div class="row-fluid">' +
                                '<div class="span10">' +
                                '<div class="row-fluid">' +
                                '<div class="span6">' + el.full_name + '</div>' +
                            '</div>';

            markup += '</div></div>';

            return markup;
        };
        //////////////////////////////////////////////////////////////////////////////////////////////

        //////////////////////////////////////////////////////////////////////////////////////////////
        var donorFormatSelection = function(el) {
            return el.full_name;
        };
        //////////////////////////////////////////////////////////////////////////////////////////////

        jQuery(document).ready(function() {
            //////////////////////////////////////////////////////////////////////////////////////////////
            jQuery('input[name="{{ admin.uniqId }}[controlPrenatalEmbarazo]"]').on('ifChecked', function(e) {
                jQuery('#{{ admin.uniqId }}_lugarControl').val('').closest('.sonata-ba-field').toggle(parseInt(this.value) === 1);
                jQuery('label[for="{{ admin.uniqId }}_lugarControl"]').toggle(parseInt(this.value) === 1);
                jQuery('#{{ admin.uniqId }}_numeroControl').val('').closest('.sonata-ba-field').toggle(parseInt(this.value) === 1);
                jQuery('label[for="{{ admin.uniqId }}_numeroControl"]').toggle(parseInt(this.value) === 1);
                if (parseInt(this.value) === 1) {
                    jQuery(this).closest('form').formValidation('addField', '{{ admin.uniqId }}[controlPrenatalEmbarazo]');
                }
                else if (this.value === 'F') {
                    jQuery(this).closest('form').formValidation('resetField', '{{ admin.uniqId }}[controlPrenatalEmbarazo]').formValidation('removeField', '{{ admin.uniqId }}[controlPrenatalEmbarazo]');
                }
            });
            jQuery('input[name="{{ admin.uniqId }}[NOTMAPPEDpartoEnHospital]"]').on('ifChecked', function(e) {
                jQuery('#{{ admin.uniqId }}_lugarParto').val('').closest('.sonata-ba-field').toggle(this.value === 'T');
                jQuery('label[for="{{ admin.uniqId }}_lugarParto"]').toggle(this.value === 'T');
                if (this.value === 'T') {
                    jQuery(this).closest('form').formValidation('addField', '{{ admin.uniqId }}[NOTMAPPEDpartoEnHospital]');
                }
                else if (this.value === 'F') {
                    jQuery(this).closest('form').formValidation('resetField', '{{ admin.uniqId }}[NOTMAPPEDpartoEnHospital]').formValidation('removeField', '{{ admin.uniqId }}[NOTMAPPEDpartoEnHospital]');
                }
            });
            jQuery('input[name="{{ admin.uniqId }}[NOTMAPPEDpatologiaEmbarazo]"]').on('ifChecked', function(e) {
                jQuery('#{{ admin.uniqId }}_idPatologiaEmbarazo').val('').closest('.sonata-ba-field').toggle(this.value === 'T');
                jQuery('label[for="{{ admin.uniqId }}_idPatologiaEmbarazo"]').toggle(this.value === 'T');
                if (this.value === 'T') {
                    jQuery(this).closest('form').formValidation('addField', '{{ admin.uniqId }}[NOTMAPPEDpatologiaEmbarazo]');
                }
                else if (this.value === 'F') {
                    jQuery(this).closest('form').formValidation('resetField', '{{ admin.uniqId }}[NOTMAPPEDpatologiaEmbarazo]').formValidation('removeField', '{{ admin.uniqId }}[NOTMAPPEDpatologiaEmbarazo]');
                }
            });
            jQuery('input[name="{{ admin.uniqId }}[NOTMAPPEDpartoAnterior]"]').on('ifChecked', function(e) {
                jQuery('#{{ admin.uniqId }}_fechaPartoAnterior').val('').closest('.sonata-ba-field').toggle(this.value === 'T');
                jQuery('label[for="{{ admin.uniqId }}_fechaPartoAnterior"]').toggle(this.value === 'T');
                if (this.value === 'T') {
                    jQuery(this).closest('form').formValidation('addField', '{{ admin.uniqId }}[NOTMAPPEDpartoAnterior]');
                }
                else if (this.value === 'F') {
                    jQuery(this).closest('form').formValidation('resetField', '{{ admin.uniqId }}[NOTMAPPEDpartoAnterior]').formValidation('removeField', '{{ admin.uniqId }}[NOTMAPPEDpartoAnterior]');
                }
            });

            jQuery('input[name="{{ admin.uniqId }}[controlPrenatalEmbarazo]"]').triggerHandler('ifChecked');
            jQuery('input[name="{{ admin.uniqId }}[NOTMAPPEDpartoEnHospital]"]').triggerHandler('ifChecked');
            jQuery('input[name="{{ admin.uniqId }}[NOTMAPPEDpatologiaEmbarazo]"]').triggerHandler('ifChecked');
            jQuery('input[name="{{ admin.uniqId }}[NOTMAPPEDpartoAnterior]"]').triggerHandler('ifChecked');
            //////////////////////////////////////////////////////////////////////////////////////////////

            //////////////////////////////////////////////////////////////////////////////////////////////
            //////// initialize with custom options
            //////////////////////////////////////////////////////////////////////////////////////////////
            var DONATION_SEARCHDONOR_search_donor_select = jQuery('#DONATION_SEARCHDONOR_search_donor');
            DONATION_SEARCHDONOR_search_donor_select.select2({
                width: 'resolve',
                minimumResultsForSearch: 10,
                dropdownAutoWidth : true,
                allowClear: true,
                placeholder: 'click para filtrar por donante...',
                minimumInputLength: 3,
                maximumSelectionSize: 1,
                // multiple: true,
                escapeMarkup: function(markup) {
                    return markup;
                },
                ajax: { // instead of writing the function to execute the request we use Select2's convenient helper
                    url: Routing.generate('siblh_donante_search'),
                    dataType: 'json',
                    quietMillis: 250,
                    data: function (term, page) {
                        var l = DONATION_SEARCHDONOR_search_donor_location_select.val();
                        // var $type = jQuery('input[name=_search_type]:checked');
                        // var $val = $type.val();
                        return {
                            q: term, // search term
                            // t: $val, // patient type
                            l: l, // location
                        };
                    },
                    results: function (data, page) { // parse the results into the format expected by Select2.
                        // since we are using custom formatting functions we do not need to alter the remote JSON data
                        return { results: data.items };
                    },
                    cache: true
                },
                initSelection: function(element, callback) {
                    // the input tag has a value attribute preloaded that points to a preselected repository's id
                    // this function resolves that id attribute to an object that select2 can render
                    // using its formatResult renderer - that way the repository name is shown preselected
                    var id = $(element).val();
                    if (id !== "") {
                        var $type = jQuery('input[name=_search_type]:checked');
                        var tp = $type.val();
                        $.ajax(Routing.generate('siblh_donante_search', {id: id, t: tp}), {
                            dataType: "json"
                        }).done(function(data) { callback(data.item); });
                    }
                },
                formatResult: donorFormatResult,  // display patient information
                formatSelection: donorFormatSelection,    // selection
            });
            //////////////////////////////////////////////////////////////////////////////////////////////

            //////////////////////////////////////////////////////////////////////////////////////////////
            //////// patient record change event
            //////////////////////////////////////////////////////////////////////////////////////////////
            DONATION_SEARCHDONOR_search_donor_select.on('change', function (e) {
                var rvalue = this.value;

                if (!rvalue) {
                    jQuery('#DONATION_SEARCHDONOR_{{ admin.uniqId }}_short_info_container').html('');
                    jQuery('#DONATION_SEARCHDONOR_{{ admin.uniqId }}_info_container').html('');
                    jQuery('#{{ admin.uniqId }}_idDonante').val('');
                    return;
                }

                jQuery('#{{ admin.uniqId }}_idDonante').val(rvalue);

                var l = DONATION_SEARCHDONOR_search_donor_location_select.val();
                var tp = {% if app.user.getIdEstablecimiento() is not null %}parseInt(l, 10) !== parseInt({{ app.user.getIdEstablecimiento().getId()|e('js') }}, 10) ? 1 : 0{% else %}0{% endif %};

                $.getJSON(Routing.generate('siblh_donante_search'), {
                        id : rvalue,
                        t: tp,   // patient type
                        l: l, // location
                    })
                    .done(function(data) {
                        jQuery('#DONATION_SEARCHDONOR_{{ admin.uniqId }}_short_info_container').html(displayPreviewSelection(data));
                    })
                    .fail(function(jqxhr, textStatus, error) {
                        //////// patient jumbotron
                        jQuery('#DONATION_SEARCHDONOR_{{ admin.uniqId }}_short_info_container').html('');
                        jQuery('#DONATION_SEARCHDONOR_{{ admin.uniqId }}_info_container').html('');
                        window.console.log(error, textStatus);
                    });
            });
            //////////////////////////////////////////////////////////////////////////////////////////////

            //////////////////////////////////////////////////////////////////////////////////////////////
            //////// initialize with custom options - LOCATION
            //////////////////////////////////////////////////////////////////////////////////////////////
            var DONATION_SEARCHDONOR_search_donor_location_select = jQuery('#DONATION_SEARCHDONOR_search_donor_location');
            DONATION_SEARCHDONOR_search_donor_location_select.select2({
                width: 'resolve',
                minimumResultsForSearch: 10,
                dropdownAutoWidth : true,
                allowClear: true,
                placeholder: 'click para filtrar por establecimiento...',
                minimumInputLength: 3,
                maximumSelectionSize: 1,
                // multiple: true,
                escapeMarkup: function(markup) {
                    return markup;
                },
                ajax: { // instead of writing the function to execute the request we use Select2's convenient helper
                    url: Routing.generate('siblh_donante_searchLocation'),
                    dataType: 'json',
                    quietMillis: 250,
                    data: function (term, page) {
                        return {
                            q: term, // search term
                        };
                    },
                    results: function (data, page) { // parse the results into the format expected by Select2.
                        // since we are using custom formatting functions we do not need to alter the remote JSON data
                        return { results: data.items };
                    },
                    cache: true
                },
                {% if app.user.getIdEstablecimiento() is not null %}
                    initSelection: function(element, callback) {
                        // // the input tag has a value attribute preloaded that points to a preselected repository's id
                        // // this function resolves that id attribute to an object that select2 can render
                        // // using its formatResult renderer - that way the repository name is shown preselected
                        // var id = $(element).val();
                        // if (id !== "") {
                        //     var $type = jQuery('input[name=_search_type]:checked');
                        //     var tp = $type.val();
                        //     $.ajax(Routing.generate('siblh_donante_search', {id: id, t: tp}), {
                        //         dataType: "json"
                        //     }).done(function(data) { callback(data.item); });
                        // }
                        callback({'id': {{ app.user.getIdEstablecimiento().getId()|e('js') }}, 'full_name': '{{ app.user.getIdEstablecimiento().getNombre() }}'});
                    },
                {% endif %}
                formatResult: donorFormatResult,  // display patient information
                formatSelection: donorFormatSelection,    // selection
            });
            //////////////////////////////////////////////////////////////////////////////////////////////

            //////////////////////////////////////////////////////////////////////////////////////////////
            //////// patient record change event
            //////////////////////////////////////////////////////////////////////////////////////////////
            DONATION_SEARCHDONOR_search_donor_location_select.on('change', function (e) {
                DONATION_SEARCHDONOR_search_donor_select.select2('val', '').triggerHandler('change');
            });
            //////////////////////////////////////////////////////////////////////////////////////////////
        });

    </script>
{% endblock %}